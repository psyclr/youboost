# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=youboost_dev
DATABASE_USER=youboost
DATABASE_PASSWORD=youboost_dev_password
DATABASE_URL=postgresql://youboost:youboost_dev_password@localhost:5432/youboost_dev

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
